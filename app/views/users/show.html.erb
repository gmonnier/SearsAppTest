<table class="profile" summary="Information profil">
	<tr>
		<td class="main">
			<h1><img src="<%= @gravatar_link %>" alt"Gravatar" class="gravatar"></img><%=@user.name%></h1>
		</td>
		<td class="sidebar round">
			<strong>Name</strong> <%= @user.name %> <br/>
			<strong>URL</strong> <%= link_to user_path(@user), @user %>
		</td>
	</tr>
	<tr>
		<td id="j_editprofil_action" ><%= link_to "Edit Profil", '#' , :class => "editprofil_button"%></td>
	</tr>
</table>

<%= render 'layouts/editprofile_dial' %>

