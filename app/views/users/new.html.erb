<div id="newcontent">

	<h1>Sign up page</h1>

	<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages',:object => f.object %>
		<div class="field">
			<%= f.label :name %><br />
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :email %><br />
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :pwd , "Password" %><br />
			<%= f.password_field :pwd %>
		</div>
		<div class="field">
			<%= f.label :pwd_confirmation, "Confirmation" %><br />
			<%= f.password_field :pwd_confirmation %>
		</div>
		<div class="actions">
			<%= f.submit "Inscription" %>
		</div>
	<% end %>

</div>
